@{
  Layout = "_Layout";
}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>OMG OMS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <h1>OMG! Order Management Guru</h1>
    <h3>Order Details: </h3>
    <br>
    <div class="container" id="orderDetails">
      @* <div class="row" id="orderDetails"> *@
        <h4><em>Vendor: </em> @Model["vendor"].Name</h4>
        <h4><em>Vendor description: </em>@Model["vendor"].Description</h4>
        <br>
        <h4>@Model["order"].Title</h4>
        <h4>@Model["order"].Description</h4>
        <h4>@Model["order"].Price</h4>
        <h4>@Model["order"].Date</h4>
      @* </div> *@
    </div>

    <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a> &nbsp &nbsp &nbsp <a href='/vendors'>View all vendors</a> &nbsp &nbsp &nbsp <a href='/'>Return to Home Page</a></p>
  </body>
</html>