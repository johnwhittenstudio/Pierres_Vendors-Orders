@{
  Layout = "_Layout";
}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>OMG OMS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    @using VendorOrder.Models;
    <h1>OMG! Order Management Guru</h1>
    <h3>Vendors</h3>
    <hr>
    <br>

    @if (@Model.Count == 0)
    {
      <h4>No vendors have been added yet!</h4>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
    }
    <br>
    <br>
    <p><a href='/vendors/new'>Add a New Vendor</a> &nbsp &nbsp &nbsp <a href='/'>Return to Home Page</a></p>
  </body>
</html>